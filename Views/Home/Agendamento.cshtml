@model PreAgendamento;
@{
    ViewData ["Title"]= "Agendamento";
}

<div class="row mt-3">
<div class="col-6 border border-dark">
<h3>Pr√© - agendamento</h3>
<br>
<form method="post" id="frmAgendamento">
<div class="row">
<div class="col-2">
<label asp-for="Nome">Nome:</label>
</div>
<div class="col-10">
<input asp-for="Nome" type="text" id="nome">
</div>
</div>

<div class="row">
<div class="col-2">
<label asp-for="Telefone">Telefone:</label>
</div>
<div class="col-10">
<input asp-for="Telefone" type="tel" id="telefone">
</div>
</div>

<div class="row">
<div class="col-2">
<label asp-for="Data">Data:</label>
</div>
<div class="col-10">
<input asp-for="Data" type="date" id="data">
</div>
</div>

<div class="row">
<div class="col-2">
<label asp-for="Animal">Animal:</label>
</div>
<div class="col-10">
<input asp-for="Animal" type="text" id="animal">
</div>
</div>

<div class="row">
<div class="col-2">
<label asp-for="Necessidade">Necessidade:</label>
</div>
<div class="col-10">
<input asp-for="Necessidade" id="necessidade">
</div>
</div>

<p>
<input type="submit" id="botao" value="Enviar">
</p>

</form>
</div>
